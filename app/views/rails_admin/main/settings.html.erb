<h1>Smart House Settings</h1>

<table class="table table-condensed table-striped">
	<thead>
		<tr>
			<th class="shrink download"></th>
			<th class="shrink download"></th>
			<th class="shrink upload"></th>
		</tr>
	</thead>
	<tbody>
		<tr class="odd">
			<td>
				<span class="show">Upload Floor Plan</span>
			</td>

			<td>
				<%= form_with url: upload_floor_plan_path, id: "upload-form" do |f| %>
					<div class="form-group">
						<%= f.file_field :image, id: "upload-field", class: "text-light" %>
						<%= f.submit "Upload Sheet", class: "submit" %>
					</div>
				<% end %>
			</td>
		</tr>

		<tr class="even">
			<td>
				<span class="show">Upload Icon</span>
			</td>

			<td>
				<%= form_with url: icon_upload_path, id: "upload-form" do |f| %>
					<div class="form-group">
						<%= f.label :name, "Name" %>
						<%= f.text_field :name, id: "name-field", class: "text-light" %>
						<%= f.file_field :icon, id: "upload-field", class: "text-light" %>
						<%= f.submit "Upload Icon", class: "submit" %>
					</div>
				<% end %>
			</td>
		</tr>
	</tbody>
</table>	